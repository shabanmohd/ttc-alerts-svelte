{
	"name": "ttc-alerts-svelte",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "npm run translate && vite dev",
		"dev:watch": "npm run translate && concurrently \"vite dev\" \"node scripts/watch-translations.cjs\"",
		"build": "npm run translate && vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"translate": "node scripts/translate-i18n.cjs",
		"translate:check": "node scripts/translate-i18n.cjs --check",
		"translate:watch": "node scripts/watch-translations.cjs"
	},
	"devDependencies": {
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.544.0",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"bits-ui": "^2.14.4",
		"clsx": "^2.1.1",
		"concurrently": "^9.2.1",
		"husky": "^9.1.7",
		"mode-watcher": "^1.1.0",
		"sharp": "^0.34.5",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.4",
		"svelte-sonner": "^1.0.7",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.17",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.2"
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.86.0",
		"@types/leaflet": "^1.9.21",
		"csv-parse": "^6.1.0",
		"dexie": "^4.2.1",
		"leaflet": "^1.9.4",
		"lucide-svelte": "^0.555.0",
		"svelte-i18n": "^4.0.1"
	}
}
